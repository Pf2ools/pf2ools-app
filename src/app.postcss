@import './css/fonts.postcss';
@import './css/transitions.postcss';

@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

@layer components {
	.variant-outline-interact {
		@apply ring-[1px] ring-interact-500 dark:ring-interact-500 ring-inset;
	}

	.variant-ghost-interact {
		@apply bg-interact-500/20 dark:bg-interact-500/20 variant-outline-interact;
	}

	.variant-soft-interact {
		@apply bg-interact-400/20 dark:bg-interact-500/20 text-interact-700-200-token !ring-0;
	}

	.selected {
		box-shadow: inset 0 0 0 200px rgba(0, 107, 196, 0.3) !important;
	}

	.homebrew-shadow {
		box-shadow: inset 0 0 5px rgb(192 132 252 / 25%);
	}

	.secondary-shadow {
		box-shadow: inset 0 0 5px rgb(72 152 52 / 25%);
	}

	.offset-scroll {
		margin-right: calc(-1 * var(--scrollbar-width, 8px));
		::-webkit-scrollbar {
			width: var(--scrollbar-width, 8px);
		}
	}
}

@layer utilities {
	.border-r-next:has(~ .border-r-next) {
		@apply border-r border-surface-500 border-dashed;
	}
	.border-b-next:has(~ .border-b-next) {
		@apply border-b border-surface-500 border-dashed;
	}

	.generic-disabled:disabled,
	.generic-disabled:disabled > * {
		cursor: not-allowed !important;
		opacity: 0.5 !important;
	}

	.scroll-thin {
		scrollbar-width: thin;
	}
	.scroll-stable {
		scrollbar-gutter: stable;
	}
}

html,
body {
	@apply h-full overflow-hidden;
}

hr {
	@apply my-1;
}

* {
	@apply tabular-nums;
}

#title + .app-bar,
#title:has(+ .app-bar) {
	@apply bg-gradient-to-l dark:bg-blend-color dark:from-surface-800 dark:to-primary-500/20 bg-surface-300/75 dark:bg-surface-100-800-token;
}
